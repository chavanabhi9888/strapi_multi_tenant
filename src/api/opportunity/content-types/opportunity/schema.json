{
  "kind": "collectionType",
  "collectionName": "opportunities",
  "info": {
    "singularName": "opportunity",
    "pluralName": "opportunities",
    "displayName": "Opportunity",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "organization": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization.organization",
      "inversedBy": "opportunities"
    },
    "organization_user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::organization-user.organization-user",
      "inversedBy": "opportunities"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "profile": {
      "type": "string",
      "required": true
    },
    "skills": {
      "type": "string",
      "required": true
    },
    "opportunity_type": {
      "type": "enumeration",
      "enum": [
        "internship",
        "volunteer"
      ],
      "required": true
    },
    "city": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "customField",
      "options": [
        "Remote",
        "Andhra Pradesh",
        "Arunachal Pradesh",
        "Assam",
        "Bihar",
        "Chhattisgarh",
        "Goa",
        "Gujarat",
        "Haryana",
        "Himachal Pradesh",
        "Jharkhand",
        "Karnataka",
        "Kerala",
        "Madhya Pradesh",
        "Maharashtra",
        "Manipur",
        "Meghalaya",
        "Mizoram",
        "Nagaland",
        "Odisha",
        "Punjab",
        "Rajasthan",
        "Sikkim",
        "Tamil Nadu",
        "Telangana",
        "Tripura",
        "Uttar Pradesh",
        "Uttarakhand",
        "West Bengal",
        "Andaman and Nicobar Islands",
        "Chandigarh",
        "Dadra and Nagar Haveli and Daman and Diu",
        "Lakshadweep",
        "Delhi",
        "Puducherry",
        "Jammu and Kashmir",
        "Ladakh"
      ],
      "customField": "plugin::multi-select.multi-select",
      "required": true
    },
    "part_time": {
      "type": "boolean",
      "required": true
    },
    "openings": {
      "type": "integer",
      "required": true
    },
    "start": {
      "type": "enumeration",
      "enum": [
        "immediately",
        "later"
      ]
    },
    "start_on": {
      "type": "date",
      "required": true
    },
    "end_on": {
      "type": "date",
      "required": true
    },
    "duration": {
      "type": "string",
      "required": true
    },
    "months": {
      "type": "string",
      "required": true
    },
    "responsibilities": {
      "type": "text",
      "required": true
    },
    "stipend_type": {
      "type": "enumeration",
      "enum": [
        "paid",
        "unpaid",
        "performance",
        "negotiable"
      ]
    },
    "currency": {
      "type": "string",
      "required": true
    },
    "stipend_value": {
      "type": "decimal",
      "required": true
    },
    "payment_type": {
      "type": "string",
      "required": true
    },
    "perks": {
      "type": "text",
      "required": true
    },
    "ppo": {
      "type": "boolean",
      "required": true
    },
    "cover_letter": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "files"
      ]
    },
    "assessment_questions": {
      "type": "text",
      "required": true
    },
    "facilities": {
      "type": "text",
      "required": true
    },
    "support": {
      "type": "text",
      "required": true
    },
    "terms": {
      "type": "text",
      "required": true
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "ratings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::rating.rating",
      "mappedBy": "opportunity"
    },
    "opportunity_statuses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::opportunity-status.opportunity-status",
      "mappedBy": "opportunity"
    },
    "lat": {
      "type": "float"
    },
    "long": {
      "type": "float"
    },
    "isDeleted": {
      "type": "boolean",
      "default": false
    },
    "saves": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::save.save",
      "mappedBy": "opportunity"
    }
  }
}
